+#
+# chkconfig: - 85 15
+#
+# description: Panda server webserver
+# processname: httpd
+# config: /etc/panda/panda_server-httpd.conf
+# config: /etc/sysconfig/httpd-pandasrv
+# pidfile: /var/run/httpd-pandasrv.pid

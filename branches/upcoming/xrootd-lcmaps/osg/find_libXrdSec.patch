 configs/config.d/40-xrootd-lcmaps.cfg | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/configs/config.d/40-xrootd-lcmaps.cfg b/configs/config.d/40-xrootd-lcmaps.cfg
index 3026a54..968ed6c 100644
--- a/configs/config.d/40-xrootd-lcmaps.cfg
+++ b/configs/config.d/40-xrootd-lcmaps.cfg
@@ -14,7 +14,7 @@
 #
 
 if defined ?EnableLcmaps
-   xrootd.seclib /usr/lib64/libXrdSec-4.so
+   xrootd.seclib libXrdSec.so
    sec.protocol /usr/lib64 gsi -certdir:/etc/grid-security/certificates \
                        -cert:/etc/grid-security/xrd/xrdcert.pem \
                        -key:/etc/grid-security/xrd/xrdkey.pem \


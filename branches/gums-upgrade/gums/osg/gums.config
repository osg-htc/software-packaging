<?xml version='1.0' encoding='UTF-8'?>

<gums version='1.3' allowGridmapFiles='true'>

	<persistenceFactories>

		<hibernatePersistenceFactory
			name='persistenceFactory'
			description=''
			storeConfig='false'
			hibernate.c3p0.timeout='180'
			hibernate.connection.driver_class='com.mysql.jdbc.Driver'
			hibernate.connection.autoReconnect='true'
			hibernate.c3p0.max_size='20'
			hibernate.dialect='org.hibernate.dialect.MySQLDialect'
			hibernate.c3p0.min_size='3'
			hibernate.connection.username='gums'
			hibernate.connection.url='jdbc:mysql://localhost.localdomain:3306/GUMS_1_4'
			hibernate.c3p0.idle_test_period='60'
                        hibernate.connection.provider_class='org.hibernate.connection.C3P0ConnectionProvider'
			hibernate.connection.password='mysecret'/>
	</persistenceFactories>

	<userGroups>

		<manualUserGroup
			name='admins'
			access='write'
			description=''
			persistenceFactory='persistenceFactory'/>

		<manualUserGroup
			name='gums-test'
			access='read all'
			description=''
			persistenceFactory='persistenceFactory'/>

	</userGroups>

	<accountMappers>

		<groupAccountMapper
			name='gums-test'
			description=''
			accountName='testAccount'/>

		<manualAccountMapper
			name='manual'
			description=''
			persistenceFactory='persistenceFactory'/>

	</accountMappers>

	<groupToAccountMappings>

		<groupToAccountMapping
			name='gums-test'
			description=''
			accountingVoSubgroup='TEST'
			accountingVo='test'
			userGroups='gums-test'
			accountMappers='manual, gums-test'/>

	</groupToAccountMappings>

	<hostToGroupMappings>

		<hostToGroupMapping
			groupToAccountMappings='gums-test'
			description=''
			cn='*.*.*, *.*.*.*'/>

	</hostToGroupMappings>

</gums>
